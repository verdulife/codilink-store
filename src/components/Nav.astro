---
import Logo from "./Logo.astro";
---

<header
  class="sticky top-0 flex justify-center border-b-0 border-slate-800 bg-transparent backdrop-blur-0"
>
  <nav class="flex w-full max-w-6xl justify-between items-center py-6">
    <Logo class="text-2xl"></Logo>

    <ul class="flex gap-12">
      <li>
        <a href="/como-funciona" class="hover:underline">Como funciona</a>
      </li>
      <li>
        <a
          href="/subir"
          class="rounded bg-blue-500 px-4 py-2 text-lg font-semibold transition hover:scale-110 hover:bg-blue-700"
        >
          + Subir
        </a>
      </li>
    </ul>
  </nav>
</header>

<style>
  @supports (animation-timeline: view()) {
    header {
      animation-timeline: view();
      animation-name: softBg;
      animation-fill-mode: both;
      animation-range: 35% 42%;
    }
  }

  @keyframes softBg {
    100% {
      @apply border-b bg-slate-950 bg-opacity-60 backdrop-blur-lg;
    }
  }
</style>
